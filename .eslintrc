{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": "airbnb",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "React": true,
    "PropTypes": true,
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "dot-notation": 0,
    "quotes": ["single", { "allowTemplateLiterals": true }],
    "require-default-props": 0,
    "import/prefer-default-export": 0,
    "semi-style": 0,
    "react/no-array-index-key": 0,
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          ".storybook/**",
          "**/*.stories.*",
          "stories/**"
        ]
      }
    ]
  }
}
